<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%level] [%logger]: %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- 这里把你的包名或 logger 名称设为 DEBUG -->
        <Logger name="DeadVoid" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Root logger 默认 INFO -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
